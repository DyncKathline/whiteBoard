<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <Button
            android:id="@+id/id_select_ink"
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:text="曲线"
            android:src="@mipmap/icon_ink" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <Button
            android:id="@+id/id_select_line"
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:text="直线"
            android:src="@mipmap/icon_line" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <Button
            android:id="@+id/id_select_arrow"
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:text="箭头"
            android:src="@mipmap/icon_arrows" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <Button
            android:id="@+id/id_select_rect"
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:text="矩形"
            android:src="@mipmap/icon_rect" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <Button
            android:id="@+id/id_select_oval"
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:text="椭圆"
            android:src="@mipmap/icon_circlr" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <Button
            android:id="@+id/id_select_circle"
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:text="圆形"
            android:src="@mipmap/icon_circlr" />
    </LinearLayout>
</LinearLayout>